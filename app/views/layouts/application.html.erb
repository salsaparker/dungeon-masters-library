<!DOCTYPE html>
<html>
<head>
  <title>DungeonMastersLibrary</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <header>
    <% if admin_signed_in? %>
    <%= link_to 'NewTome', new_book_path, class: 'btn btn-success glyphicon glyphicon-book' %> 
    <%= link_to 'Logout', logout_path, method: :delete, class: 'btn btn-warning glyphicon glyphicon-heart-empty' %>
    <% end %>
    </header>
<%= yield %>
  </div>
</body>
</html>
